<Window x:Class="CoreTail.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoreTail.Wpf"
        mc:Ignorable="d"
        Title="CoreTail (WPF)" Width="800" Height="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" Grid.Column="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Command="{Binding FileOpenCommand}" />
                <!--TODO:-->
                <!--<Separator />
                <MenuItem Header="_Exit" />-->
            </MenuItem>
        </Menu>

        <ListBox Name="ListBox" Grid.Row="1" Grid.Column="0" ItemsSource="{Binding LogContent}" 
                 Loaded="ListBox_OnLoaded" />

        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Margin="0,0,5,0">Log size:</TextBlock>
            <TextBlock Text="{Binding LogContent.Count}"/>
        </StackPanel>
    </Grid>
</Window>